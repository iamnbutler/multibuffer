{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"files": {
		"includes": ["src/**", "tests/**", "benchmarks/**", "demo/*.ts", "demo/*.html", "demo/fixtures/**"]
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "error"
			},
			"style": {
				"noNonNullAssertion": "error"
			}
		}
	},
	"plugins": ["./rules/no-type-assertion.grit", "./rules/no-unknown-type.grit"],
	"formatter": {
		"enabled": false
	}
}
